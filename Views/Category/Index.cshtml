@model IEnumerable<ShopProject.Models.Category>

    @{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List of Categories</h1>

    <p>
    <a asp-action="Create" asp-controller="Product" class="btn btn-primary">Create New product</a>
    </p>
    <p>
    <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create New Category</a>
    </p>
    <table class="table">
    <thead>
    <tr>
    <th>
    @Html.DisplayNameFor(model => model.Name)
    </th>
    <th>
    @Html.DisplayNameFor(model => model.Parent)
    </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
    <tr>
        <td>
        @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
        @Html.DisplayFor(modelItem => item.Parent.Name)
        </td>
        <td>
        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit category</a>
        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">category Details</a>
        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Delete category</a>
        </td>
        </tr>
}
</tbody>
    </table>