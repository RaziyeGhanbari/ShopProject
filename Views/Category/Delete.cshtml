@model ShopProject.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isParentCategory = ViewData["IsParentCategory"] as bool? ?? false;
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Category</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Parent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Parent.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fields)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var field in Model.Fields)
                {
                    <li>
                        @Html.DisplayFor(modelItem => field.Name)
                    </li>
                }
            </ul>
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id"/>
        @if (Model.Products.Count > 0)
        {
            <div>
                You can't delete this Category because it contains products!
            </div>
            <br/>
            <input type="submit" value="Delete" class="btn btn-danger" disabled/>
        }
        else if (isParentCategory)
        {
            <div>
                You cannot delete this Category because it's a parent of another category!
            </div>
            <br/>
            <input type="submit" value="Delete" class="btn btn-danger" disabled/>
        }
        else
        {
            <input type="submit" value="Delete" class="btn btn-danger"/>
        }
        <br/>
        <a asp-action="Index">Back to List</a>
    </form>
</div>