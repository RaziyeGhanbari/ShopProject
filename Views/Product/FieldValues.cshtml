@model ShopProject.Models.FieldValuesViewModel

@{
    ViewData["Title"] = "Add Field Values";
}

<h1>Add Field Values</h1>

<form asp-action="CreateFieldValues" asp-controller="Product" method="post">
    @Html.HiddenFor(m => m.CategoryId)
    <table class="table">
        <thead>
        <tr>
            <th>Field Name</th>
            <th>Value</th>
        </tr>
        </thead>
        <tbody>
        @for (int i = 0; i < Model.Fields.Count; i++)
        {
            <tr>
                <td>@Model.Fields[i].Name</td>
                <td>
                    <input type="hidden" name="FieldValues[@i].FieldId" value="@Model.Fields[i].Id" />
                    <input type="hidden" name="FieldValues[@i].CategoryId" value="@Model.CategoryId" />
                    <input type="hidden" name="FieldValues[@i].ProductId" value="@Model.ProductId" />
                    @* <input type="hidden" name="FieldValues[@i].idStatus" value="0" /> *@
                    <input type="text" name="FieldValues[@i].Value" class="form-control" />
                </td>
            </tr>
        }
        
        </tbody>
    </table>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>